<div id="form_errors" class="form-errors">
  <% if model.errors.any? %>
    <h2>Please correct the following <%= pluralize(model.errors.count, "error") %> and try again:</h2>

    <ul>
      <% model.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
